@using PPTWebApp.Data.Models
@inject BrandingSettings.ProfileSettings BrandingProfile

@functions {
    // This is necessary because the "@" in the links are recognized as c# in the HTML section
    private MarkupString externalScripts = new MarkupString(@"<script src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js'></script>
    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js'></script>");
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="PPTWebApp.styles.css" />
    <link rel="icon" type="image/png" href=@BrandingProfile.FaviconPath />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <HeadOutlet />
</head>

<body>
    <Routes />
    @externalScripts
    <script src="_framework/blazor.web.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="js/site.js"></script>
    <script src="js/cookieHelper.js"></script>



</body>

</html>
